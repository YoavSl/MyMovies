<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/inFavoritesVW"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_movie_card_in_favorites_height"
            android:background="@drawable/shape_in_favorites"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/posterIV"
            android:layout_width="@dimen/image_view_movie_card_poster_size"
            android:layout_height="@dimen/image_view_movie_card_poster_size"
            android:contentDescription="@string/image_view_description_movie_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/ImageViewPoster" />

        <android.support.design.chip.Chip
            android:id="@+id/releaseDateCP"
            android:layout_width="@dimen/chip_main_list_release_date_width"
            android:layout_height="@dimen/chip_main_list_release_date_height"
            android:layout_marginStart="@dimen/chip_main_list_release_date_margin_start"
            android:layout_marginTop="@dimen/chip_main_list_release_date_margin_top"
            android:alpha="0.8"
            android:textAppearance="@style/ChipTextReleaseDateMainList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:layout_marginStart="7sp"
            android:layout_marginEnd="10sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@id/posterIV"
            app:layout_constraintEnd_toStartOf="@id/ratingTV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ratingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toStartOf="@id/ratingIV"
            app:layout_constraintBottom_toBottomOf="@id/ratingIV" />

        <ImageView
            android:id="@+id/ratingIV"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginEnd="7sp"
            android:contentDescription="Rating icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleTV"
            app:srcCompat="@drawable/ic_rating" />

        <TextView
            android:id="@+id/overviewTV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="7sp"
            android:layout_marginEnd="7sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="7dp"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintStart_toEndOf="@id/posterIV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTV"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>