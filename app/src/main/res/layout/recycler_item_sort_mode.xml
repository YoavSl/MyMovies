<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/ConstraintLayoutSortMode" >

    <TextView
        android:id="@+id/sortModeNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextViewSortModeName" />

    <ImageView
        android:id="@+id/sortingDirectionIV"
        android:layout_width="@dimen/image_view_sorting_direction_size"
        android:layout_height="@dimen/image_view_sorting_direction_size"
        android:contentDescription="@string/image_view_description_sorting_direction"
        app:layout_constraintStart_toEndOf="@id/sortModeNameTV" />

</android.support.constraint.ConstraintLayout>