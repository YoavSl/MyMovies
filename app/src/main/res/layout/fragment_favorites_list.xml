<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/toolbar_title_favorites_empty"
        app:titleTextAppearance="@style/ToolbarText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviesRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layoutAnimation="@anim/layout_anim_fall_down"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sortMenuEL"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/RecyclerView"/>

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        layout="@layout/expandable_sort_menu" />

    <ProgressBar
        android:id="@+id/loadingListPB"
        android:layout_width="@dimen/progress_bar_loading_list_size"
        android:layout_height="@dimen/progress_bar_loading_list_size"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ProgressBarLoadingMovies" />

    <android.support.constraint.Group
        android:id="@+id/noFavoritesCG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="noFavoritesIV, noFavoritesTV" />

    <ImageView
        android:id="@+id/noFavoritesIV"
        android:layout_width="@dimen/image_view_no_favorites_size"
        android:layout_height="@dimen/image_view_no_favorites_size"
        android:contentDescription="@string/image_view_description_no_favorites"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_favorites_list_empty"
        style="@style/ViewNoFavorites" />

    <TextView
        android:id="@+id/noFavoritesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_view_no_favorites_margin_top"
        android:text="@string/text_view_no_favorites"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noFavoritesIV"
        style="@style/TextViewNoFavorites" />

</android.support.constraint.ConstraintLayout>