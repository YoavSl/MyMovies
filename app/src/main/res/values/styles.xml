<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardViewStyle" >
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
    </style>

    <style name="CardViewReview" parent="CardViewStyle" >
        <item name="cardElevation">@dimen/card_view_review_elevation</item>
    </style>

    <style name="ChipReleaseDateDetailsScreen" >
        <item name="android:textColor">@android:color/white</item>
        <item name="chipBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ChipReleaseDateMainList" >
        <item name="android:alpha">0.8</item>
    </style>

    <style name="ChipTextReleaseDateMainList" >
        <item name="android:textSize">@dimen/chip_movie_card_release_date_text_size</item>
    </style>

    <style name="CollapsingToolbarLayout" >
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">@color/colorPrimaryDark</item>
    </style>

    <style name="CollapsingToolbarImageView" >
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
    </style>

    <style name="CollapsingToolbar" >
        <item name="android:layout_marginEnd">@dimen/collapsing_toolbar_margin_end</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="ConstraintLayoutSortMode" >
        <item name="android:layout_marginStart">@dimen/constraint_layout_sort_mode_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/constraint_layout_sort_mode_margin_horizontal</item>
    </style>

    <style name="ConstraintLayoutTrailerThumbnail" >
        <item name="android:layout_marginEnd">@dimen/constraint_layout_trailer_thumbnail_margin_end</item>
    </style>

    <style name="ExpandableCardSortMenu" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/expandable_card_sort_menu_padding_start</item>
        <item name="android:paddingTop">@dimen/expandable_card_sort_menu_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/expandable_card_sort_menu_padding_vertical</item>
    </style>

    <style name="ExpandableTextViewReviewCardContent" >
        <item name="android:layout_marginTop">@dimen/expandable_text_view_review_card_content_margin_top</item>
        <item name="android:alpha">0.7</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/expandable_text_view_review_card_content_max_lines</item>
        <item name="android:textSize">@dimen/expandable_text_view_review_card_content_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="animation_duration">@integer/expandable_text_view_review_card_content_animation_duration</item>
    </style>

    <style name="FloatingActionButton" >
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ImageViewMoviePoster" >
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ProgressBarLoadingMovies" >
        <item name="android:indeterminate">true</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small" >
        <item name="android:numStars">@integer/rating_bar_num_stars</item>
    </style>

    <style name="RecyclerView" >
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="SearchView" >
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="TextViewCategoryCardTitle" >
        <item name="android:textSize">@dimen/text_view_category_card_title_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewMovieCardTitle" >
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/text_view_movie_card_title_max_lines</item>
        <item name="android:textSize">@dimen/text_view_movie_card_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewMovieCardRating" >
        <item name="android:textSize">@dimen/text_view_movie_card_rating_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewMovieCardOverview" >
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_view_movie_card_overview_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewMovieDetailsLabels" >
        <item name="android:textSize">@dimen/text_view_movie_details_label_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewMovieDetailsOverview" >
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">@dimen/text_view_movie_details_overview_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewReviewCardAuthor" >
        <item name="android:textSize">@dimen/text_view_review_card_author_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewSortModeName" >
        <item name="android:textSize">@dimen/text_view_sort_mode_name_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewEmptyList" parent="ViewEmptyList" >
        <item name="android:textSize">@dimen/text_view_empty_list_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewNoContent" >
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">@dimen/text_view_no_content_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Toolbar" >
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarText" >
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="ViewEmptyList" >
        <item name="android:alpha">0.5</item>
    </style>

</resources>